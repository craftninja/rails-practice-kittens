<h1>Kittens!</h1>

  <% if @categorization.errors.any? %>
    <ul class="errors">
      <% @categorization.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
<div class="kittens-container">
  <%= image_tag @kitten.image %>
  <%= form_for [@kitten, @categorization] do |f| %>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, :prompt => true %>
    <%= f.submit 'Add category' %>
  <% end %>
</div>
